{
  "name": "data-hub-fe-beta2",
  "version": "1.4.8",
  "description": "Data Hub Beta 2",
  "main": "src/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/uktrade/data-hub-fe-beta2"
  },
  "dependencies": {
    "@uktrade/trade_elements": "^3.2.1",
    "autoprefixer": "^7.1.1",
    "axios": "^0.15.2",
    "babel-core": "^6.23.1",
    "babel-eslint": "^7.2.3",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-class-properties": "^6.19.0",
    "babel-preset-es2015": "^6.14.0",
    "body-parser": "^1.15.2",
    "browser-sync": "^2.14.2",
    "celebrate": "^4.0.1",
    "chai": "^3.5.0",
    "churchill": "^1.2.0",
    "compression": "^1.6.2",
    "connect-flash": "0.1.1",
    "connect-redis-crypto": "3.1.1",
    "core-js": "^2.4.1",
    "csurf": "^1.9.0",
    "date-fns": "^1.28.5",
    "dotenv": "^4.0.0",
    "eslint": "^3.17.0",
    "express": "^4.14.0",
    "express-session": "^1.14.1",
    "express-sslify": "^1.2.0",
    "font-awesome": "^4.6.3",
    "html5shiv": "^3.7.3",
    "istanbul": "^0.4.5",
    "joi": "^10.5.2",
    "jsdom": "^10.1.0",
    "lodash": "^4.16.4",
    "mocha": "^3.0.2",
    "mocha-multi": "^0.9.1",
    "moment": "^2.17.1",
    "nock": "^9.0.13",
    "node-sass": "^4.0.0",
    "nodemon": "^1.11.0",
    "npm-parallel": "^2.0.1",
    "nunjucks": "^3.0.0",
    "nyc": "^10.2.0",
    "postcss-cli": "^4.0.0",
    "proxyquire": "^1.7.10",
    "request": "^2.74.0",
    "request-promise": "^4.1.1",
    "sass-lint": "^1.10.2",
    "sinon": "^2.1.0",
    "sinon-chai": "^2.10.0",
    "slashify": "^1.0.0",
    "sniffr": "^1.1.4",
    "standard": "^10.0.2",
    "uglify": "^0.1.5",
    "wavy": "^1.0.4",
    "webpack": "^1.14.0",
    "winston": "^2.3.0"
  },
  "scripts": {
    "clean": "rm -rf build",
    "start": "node --use-strict src/server.js",
    "build": "npm run clean && npm run sass:compile && npm run js",
    "test": "mocha test/unit/**/*.test.js",
    "test:watch": "npm test -- -w",
    "test:acceptance": "nightwatch --config test/acceptance/nightwatch.conf.js",
    "coverage": "nyc --reporter=html --reporter=text --reporter=lcov npm run test",
    "lint": "npm run lint:js && npm run lint:sass",
    "lint:js": "eslint ./test ./src *.js",
    "lint:js:modified": "CHANGED_FILES=$(git diff --staged --name-only -- '*.js'); if [ \"$CHANGED_FILES\" ]; then eslint $(echo $CHANGED_FILES); fi",
    "lint:sass": "sass-lint -c .sass-lint.yml 'src/**/*.scss' -v -q",
    "lint:sass:modified": "sass-lint -c .sass-lint.yml $(git diff --staged --name-only -- '*.scss') -v -q",
    "develop": "parallel sass:watch js:client:watch js:server:watch",
    "client:watch": "parallel sass:watch js:client:watch",
    "js": "npm run js:client",
    "js:client": "webpack",
    "js:client:watch": "webpack --watch",
    "js:server:watch": "nodemon --inspect src/server.js --ignore build/",
    "sass": "node-sass src/sass/application.scss build/css/application.css --include-path ./node_modules/@uktrade/trade_elements/dist/sass/ --include-path ./node_modules/font-awesome/scss/ --source-map true --source-map-contents true && npm run css:autoprefixer",
    "sass:watch": "nodemon -e scss -x 'npm run sass'",
    "sass:compile": "npm run sass -- -x --output-style compressed",
    "css:autoprefixer": "postcss build/css/*.css --use autoprefixer -d build/css",
    "sync": "browser-sync start --proxy http://localhost:3000 --files build/css/*.css build/javascripts/*.js",
    "circle": "npm run lint && nyc --reporter=lcov npm test -- --reporter mocha-circleci-reporter && npm run sass && npm run js && codeclimate-test-reporter < coverage/lcov.info",
    "heroku-postbuild": "npm rebuild node-sass && npm run sass && npm run js"
  },
  "pre-commit": [
    "lint:sass:modified",
    "lint:js:modified"
  ],
  "author": "Zac Tolley <zac@thetolleys.com>",
  "license": "MIT",
  "engines": {
    "node": "8.1.0"
  },
  "devDependencies": {
    "chai-as-promised": "^6.0.0",
    "chromedriver": "^2.30.1",
    "codeclimate-test-reporter": "^0.4.1",
    "cucumber": "^2.3.1",
    "eslint-plugin-mocha": "^4.9.0",
    "html": "^1.0.0",
    "js-beautify": "^1.6.14",
    "mocha-circleci-reporter": "0.0.2",
    "nightwatch": "^0.9.16",
    "nightwatch-cucumber": "^7.1.9",
    "pre-commit": "^1.2.2",
    "selenium-server": "^3.4.0",
    "shortid": "^2.2.8"
  }
}
