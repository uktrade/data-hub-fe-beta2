{% extends "../template.njk" %}

{% set phase = investment.stage.name %}
{% set crm = investment.client_relationship_manager %}
{% set rsa = investment.referral_source_adviser %}

{% block main_grid_right_column %}
  <h2 class="govuk-heading-m">Assign project management</h2>

  {% component 'key-value-table', items=briefInvestmentSummary, variant='striped' %}

  {% call Form(form) %}
    {{ MultipleChoiceField({
      name: 'project_assurance_adviser',
      label: form.labels.project_assurance_adviser,
      error: form.errors.project_assurance_adviser,
      options: form.options.projectAssuranceAdvisers,
      value: form.state.project_assurance_adviser,
      initialOption: 'Select an adviser'
    }) }}

    {{ MultipleChoiceField({
      name: 'project_manager',
      label: form.labels.project_manager,
      error: form.errors.project_manager,
      options: form.options.projectManagers,
      value: form.state.project_manager,
      initialOption: 'Select an adviser'
    }) }}

  {% endcall %}
{% endblock %}
