{% extends "./template.njk" %}

{% block main_grid_right_column %}
  <h1 class="govuk-heading-m">Associated project</h1>

  {{ EntitySearchForm({
    inputName: 'term',
    inputLabel: 'Project reference or name',
    inputPlaceholder: 'Search for associated R&D project',
    inputHint: 'Enter a project reference or name and search',
    searchTerm: searchTerm,
    isLabelHidden: false
  }) }}

  {% if results | length %}
    {{
      CollectionContent(results | assign({
        highlightTerm: searchTerm,
        countLabel: 'project',
        listModifier: 'block-links',
        query: QUERY
      }))
    }}
  {% endif %}
{% endblock %}
