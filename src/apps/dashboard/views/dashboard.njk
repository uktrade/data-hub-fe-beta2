{% extends "_layouts/datahub-base.njk" %}

{% from '../../../templates/_macros/entity/entity.njk' import Entity %}

{% block local_header %}
  {% call LocalHeader({ modifier: 'dark-banner' }) %}
    {{ EntitySearchForm({
      inputName: 'term',
      modifier: 'global',
      action: '/search/companies',
      inputLabel: 'Search for company, contact, event, investment project or OMIS order'
    }) }}
  {% endcall %}
{% endblock %}

{% block body_main_content %}
  {% if interactionsPermitted %}
    <div class="column-half">
      <div class="dashboard-section">
        <h2 class="dashboard-section-title">My interactions</h2>
        {% if interactions | length %}
          <ol class="c-entity-list">
            {% for item in interactions %}
              <li class="c-entity-list__item">{{ Entity(item) }}</li>
            {% endfor %}
          </ol>
        {% else %}
          <p>No interactions have been added.</p>
        {% endif %}
        <p class="dashboard-footer"><a href="/interactions/?dit_adviser={{user.id}}">See my interactions</a></p>
      </div>
    </div>
  {% endif %}

  <div class="column-half">
    <div class="dashboard-section">
      <h2 class="dashboard-section-title">My contacts</h2>

      {% if contacts.length %}
        <ol class="c-entity-list">
          {% for item in contacts %}
            <li class="c-entity-list__item">{{ Entity(item) }}</li>
          {% endfor %}
        </ol>
      {% else %}
        <p>No contacts have been added.</p>
      {% endif %}

      <p class="dashboard-footer"><a href="/contacts/?created_by={{user.id}}">See my contacts</a></p>
    </div>
  </div>

  <div class="column-half">
      <div class="dashboard-section">
        <h2 class="dashboard-section-title">My projects</h2>
        {% if myProjects.items | length %}
          <ol class="c-entity-list">
            {% for item in myProjects.items %}
              <li class="c-entity-list__item">{{ Entity(item) }}</li>
            {% endfor %}
          </ol>
        {% endif %}
        <p class="dashboard-footer"><a href="/investment-projects?client_relationship_manager={{user.id}}">See my projects</a></p>
      </div>
    </div>
{% endblock %}
