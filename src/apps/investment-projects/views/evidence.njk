{% extends "./_layout.njk" %}

{% block main_grid_right_column %}
  <h2 class="heading-medium">Evidence</h2>
  <a href="#">View documents imported from CDMS</a><br/>
  (will open another website)

  <table class="table--data">
    <tr>
      <th>
        Tags
      </th>
      <th>
        Comment
      </th>
      <th>
        Filename
      </th>
      <th>
        File State
      </th>
      <th>
        Edit
      </th>
    </tr>
    {% for item in evidence %}
      <tr>
        <td>
          {% for tag in item.tags %}
            <span class="c-badge">{{ tag }}</span>
          {% endfor %}
        </td>
        <td>
          {{ item.comment }}
        </td>
        <td>
          {{ item.document.original_filename }}
        </td>
        <td>
          {% if item.document.av_clean and item.document.status == 'virus_scanned' %}
            <a href="/investment-projects/{{ item.investment_project }}/evidence/{{ item.id }}/download">Download</a>
          {% else %}
            <span>File scan failed</span>
          {% endif %}
        </td>
        <td>
          <a href="/investment-projects/{{ item.investment_project }}/evidence/{{ item.id }}/edit">Edit</a>
        </td>
      </tr>
    {% endfor %}
  </table>

  <br>
  <a href="evidence/add-new" class="button">Add new evidence</a>
{% endblock %}
