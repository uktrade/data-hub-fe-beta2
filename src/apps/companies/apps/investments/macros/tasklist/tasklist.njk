{% macro taskListItem(props) %}
  {% set id = props.id or props.name %}
  {% set complete = props.complete or false %}

  <li class="task-list-item" data-auto-id="{{ id | kebabCase }}">
    <span class="task-list-item-name" aria-describedby="{{ id | kebabCase }}-incomplete">
      {{ props.name }}
    </span>
    {% if not props.complete %}
      <strong class="task-list-item-incomplete" id="{{ id | kebabCase }}-incomplete">INCOMPLETE</strong>
    {% endif %}
  </li>
{% endmacro %}
