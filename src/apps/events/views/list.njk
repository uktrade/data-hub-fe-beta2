{% extends "_layouts/two-column.njk" %}

{% block main_grid_left_column %}
  {{
    CollectionFilters({
      query: QUERY,
      filtersFields: filtersFields
    })
  }}
{% endblock %}

{% block main_grid_right_column %}
  {% set addEventButton %}
    <a id="add-event-link" class="button button-secondary" href="/events/create">Add event</a>
  {% endset %}

  {{
    Collection(searchResults | assign({
      countLabel: 'event',
      sortForm: sortForm,
      selectedFilters: selectedFilters,
      highlightTerm: selectedFilters.company_name.valueLabel,
      query: QUERY,
      summaryActionsHTML: addEventButton
    }))
  }}
{% endblock %}
